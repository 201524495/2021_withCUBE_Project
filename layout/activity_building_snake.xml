<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".buildingAirplane"
    android:background="@drawable/bg">

    <FrameLayout
        android:id="@+id/videoview_frame"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <VideoView
            android:id="@+id/main_videoview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/fullscreen_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="TODO"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_zoom_out_map_24"/>

    </FrameLayout>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="196dp"
        android:layout_height="87dp"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_vod"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="204dp"
        android:layout_height="141dp"
        android:layout_margin="50dp"
        app:srcCompat="@drawable/with_cube_logo_02"
        android:layout_gravity="center"/>


</LinearLayout>


