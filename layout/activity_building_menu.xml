        android:layout_marginTop="432dp"
        android:layout_marginEnd="136dp"
        android:background="@drawable/word_dog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dog"
