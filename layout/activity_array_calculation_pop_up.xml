<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.vrec.withcube.arrayComparisonPopUp"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_custom_box_09" />

    <Button
        android:id="@+id/im_cal_pluse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_custom_box_02"
        android:text="+"
        android:textSize="50sp"
        android:gravity="center"
        android:fontFamily="@font/font"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/im_cal_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/bg_custom_box_02"
        android:fontFamily="@font/font"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im_cal_pluse" />

    <Button
        android:id="@+id/im_cal_equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im_cal_minus"
        android:background="@drawable/bg_custom_box_02"
        android:text="="
        android:textSize="50sp"
        android:gravity="center"
        android:fontFamily="@font/font"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@mipmap/back_button_foreground"/>

    <TextView
        android:id="@+id/tv_cal_pluse"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="205dp"
        android:text="왼쪽 값과 \n오른쪽 값을 \n더한다는 의미"
        android:textSize="20sp"
        android:fontFamily="@font/font"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/im_cal_pluse"/>

    <TextView
        android:id="@+id/tv_cal_minus"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/font"
        android:text="왼쪽 값에서 \n오른쪽 값을 \n뺀다는 의미"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cal_pluse"
        app:layout_constraintStart_toEndOf="@+id/im_cal_minus"/>

    <TextView
        android:id="@+id/tv_cal_equal"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/font"
        android:text="왼쪽 값과 \n오른쪽 값이 \n같다는 의미"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cal_minus"
        app:layout_constraintStart_toEndOf="@+id/im_cal_equal"/>
</androidx.constraintlayout.widget.ConstraintLayout>